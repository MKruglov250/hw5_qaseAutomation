<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="MyApp">
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%m%n"/>
        </Console>
        <RollingFile name="fileInfoAppender" fileName="logs/qase-info.log"
              filePattern = "logs/qase-%d{yyyy-MM-dd-%i.log.gz">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </RollingFile>
        <RollingFile name="fileDebugAppender" fileName="logs/qase-debug.log"
        filePattern="logs/qase-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="fileInfoAppender" level="info"/>
            <AppenderRef ref="fileDebugAppender" level="debug"/>
        </Root>
    </Loggers>
</Configuration>